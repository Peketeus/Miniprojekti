<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Rivin maksimipituus -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package|^import"/>
    </module>

    <!-- Ei tarkisteta automaattisesti generoituja tiedostoja -->
    <property name="severity" value="warning"/>
    <module name="SuppressWarningsFilter"/>

    <!-- Java tiedostojen perusvalidaatio -->
    <module name="FileTabCharacter"/>

    <module name="TreeWalker">

        <!-- Sisennys: 4 välilyöntiä -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Nimeämissäännöt -->
        <module name="TypeName"/>        <!-- Luokkien nimet -->
        <module name="MethodName"/>      <!-- Metodien nimet -->
        <module name="LocalVariableName"/>
        <module name="MemberName"/>      <!-- Kenttien nimet -->
        <module name="ConstantName"/>    <!-- FINAL muuttujat -->

        <!-- Whitespace ja bracket -säännöt -->
        <module name="WhitespaceAround"/>
        <module name="WhitespaceAfter"/>
        <module name="NoWhitespaceBefore"/>
        <module name="NeedBraces"/>  <!-- if/else/for/while saa vähemmän bugeja -->

        <!-- Liian monimutkaisen koodin estoa (kevyt raja) -->
        <module name="CyclomaticComplexity">
            <property name="max" value="15"/>
        </module>

        <module name="MethodLength">
            <property name="max" value="80"/>
        </module>

    </module>
</module>
